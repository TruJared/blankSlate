---
import Layout from "@layouts/Layout.astro";
import CodeCopy from "@components/Astro/CodeCopy.astro";
import { Icon } from "astro-icon/components";
import PageHeading from "@components/Astro/utils/PageHeading.astro";
---

<Layout title="_Typography">
	<PageHeading text="Typography Examples" />
	<section>
		<article>
			<h1>Heading 1</h1>
			<h2>Heading 2</h2>
			<h3>Heading 3</h3>
			<h4>Heading 4</h4>
			<h5>Heading 5</h5>
			<h6>Heading 6</h6>
		</article>
	</section>

	<section>
		<article>
			<h2 class="mb-4">Paragraphs</h2>
			<h3 class="mb-2">Sample Paragraph</h3>
			<p class="mb-4">
				Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ut urna nec
				purus lacinia tincidunt nec lorem ipsum dolor sit amet.
			</p>
			<p>
				Ut urna nec purus lacinia tincidunt nec lorem ipsum dolor sit amet,
				consectetur adipiscing elit. Sed ut urna nec purus lacinia tincidunt
				nec.
			</p>
		</article>
	</section>

	<section>
		<article class="">
			<h2 class="mb-4">Lists</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<span>
					<h3 class="mb-2">Unordered List</h3>
					<ul class="list-disc pl-5">
						<li>Item 1</li>
						<li>Item 2</li>
						<li>Item 3</li>
					</ul>
				</span>
				<div>
					<h3 class="mb-2">Ordered List</h3>
					<ol class="list-decimal pl-5">
						<li>Item 1</li>
						<li>Item 2</li>
						<li>Item 3</li>
					</ol>
				</div>
			</div>
		</article>
	</section>

	<section>
		<article>
			<h2 class="mb-4">Blockquotes</h2>
			<blockquote class="border-l-4 border-gray-300 pl-4 italic">
				<p>
					Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ut urna
					nec purus lacinia tincidunt nec.
				</p>
			</blockquote>
		</article>
	</section>

	<section>
		<article>
			<h2 class="mb-4">Code</h2>
			<p class="mb-4">
				Here's an example of inline code: <code class="bg-white/20 p-1 rounded"
					>const x = 42;</code
				>
			</p>
			<CodeCopy lang="javascript" code={`const greeting = "Hello, World!";`} />
		</article>
	</section>

	<section>
		<article>
			<h2 class="mb-4">Links</h2>
			<div class="flex items-center mb-2">
				<a href="https://google.com" class="pr-1 text-blue-600 hover:underline"
					>External Link</a
				>
				<Icon name="ph:link" size="18" class="inline" />
			</div>
			<a href="/" class="text-blue-600 hover:underline">Internal Link</a>
		</article>
	</section>
</Layout>
