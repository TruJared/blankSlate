---
import Layout from "@layouts/Layout.astro";
import CodeCopy from "@components/Astro/CodeCopy.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="_Typography">
	<h1 class="mb-8">Typography Examples</h1>

	<section class="mb-12">
		<h2 class="mb-4">Headings</h2>
		<article>
			<h1>Heading 1</h1>
			<h2>Heading 2</h2>
			<h3>Heading 3</h3>
			<h4>Heading 4</h4>
			<h5>Heading 5</h5>
			<h6>Heading 6</h6>
		</article>
	</section>

	<section class="mb-12">
		<h2 class="mb-4">Paragraphs</h2>
		<article>
			<h3 class="mb-2">Sample Paragraph</h3>
			<p class="mb-4">
				Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ut urna nec
				purus lacinia tincidunt nec lorem ipsum dolor sit amet.
			</p>
			<p>
				Ut urna nec purus lacinia tincidunt nec lorem ipsum dolor sit amet,
				consectetur adipiscing elit. Sed ut urna nec purus lacinia tincidunt nec.
			</p>
		</article>
	</section>

	<section class="mb-12">
		<h2 class="mb-4">Lists</h2>
		<article class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<div>
				<h3 class="mb-2">Unordered List</h3>
				<ul class="list-disc pl-5">
					<li>Item 1</li>
					<li>Item 2</li>
					<li>Item 3</li>
				</ul>
			</div>
			<div>
				<h3 class="mb-2">Ordered List</h3>
				<ol class="list-decimal pl-5">
					<li>Item 1</li>
					<li>Item 2</li>
					<li>Item 3</li>
				</ol>
			</div>
		</article>
	</section>

	<section class="mb-12">
		<h2 class="mb-4">Blockquotes</h2>
		<article>
			<blockquote class="border-l-4 border-gray-300 pl-4 italic">
				<p>
					Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ut urna
					nec purus lacinia tincidunt nec.
				</p>
			</blockquote>
		</article>
	</section>

	<section class="mb-12">
		<h2 class="mb-4">Code</h2>
		<article>
			<p class="mb-4">
				Here's an example of inline code: <code class="bg-gray-100 p-1 rounded">const x = 42;</code>
			</p>
			<CodeCopy lang="javascript" code={`const greeting = "Hello, World!";`} />
		</article>
	</section>

	<section>
		<h2 class="mb-4">Links</h2>
		<article>
			<div class="flex items-center mb-2">
				<a href="https://google.com" class="pr-1 text-blue-600 hover:underline">External Link</a>
				<Icon name="ph:link" size="18" class="inline" />
			</div>
			<a href="/" class="text-blue-600 hover:underline">Internal Link</a>
		</article>
	</section>

</Layout>
