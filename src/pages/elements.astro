---
import Layout from "@layouts/Layout.astro";
import CodeCopy from "@components/Astro/CodeCopy.astro";
import Link from "@components/Astro/Link.astro";
import PageHeading from "@components/Astro/PageHeading.astro";
import Title from "@components/Astro/Title.astro";
import PageHeader from "@components/Astro/PageHeader.astro";
import Card from "@components/Astro/Card.astro";
import Author from "@components/Astro/Author.astro";
import Tooltip from "@components/Astro/Tooltip.astro";

const code = `
---
import type { ShikiConfig } from "astro";
import type {
	BundledLanguage,
	LanguageRegistration,
	SpecialLanguage,
} from "shiki";

import { SITE } from "@config";
import { Code } from "astro:components";
import CopyToClipboard from "./utils/CopyToClipboard.astro";

export interface CopyCodeProps {
	code?: string;
	lang: BundledLanguage | SpecialLanguage | LanguageRegistration;
	customIcon?: JSX.Element;
	theme?: ShikiConfig["theme"];
	customClass?: string | Array<{ [key: string]: boolean | string }>;
}

const {
	code = "",
	lang,
	customIcon,
	customClass,
	theme = SITE.shikiConfig.theme,
} = Astro.props as CopyCodeProps;
---

<div class:list={["relative py-1 px-4 m-0", customClass]}>
	<CopyToClipboard
		textToCopy={code}
		customIcon={customIcon}
		aria-label="Copy code to clipboard"
		size={10}
		customClass="absolute top-4 right-4"
	/>
	<Code lang={lang} theme={theme} code={code} />

</div>
`;
---

<Layout title="Elements">
	<PageHeading text="Components" />

	<section>
		<article>
			<h2>Title</h2>
			<p>Various configurations are available for the title component.</p>
			<Title title="No Background" showTitleBackground={false} />
			<div class="h-8"></div>
			<Title title="With Background" showTitleBackground class="break-words" />
			<div class="h-8"></div>
			<Title title="Logo Shown" showTitleBackground logoSrc="/alk-4.png" />
			<div class="h-8"></div>
		</article>

		<article>
			<h2>Page Header</h2>
			<p>
				There are several configurations available for the page header. These
				configuration options should make it easy to build a variety of headers.
				For example, shown below are examples of a simple header, and a more
				complex header with image, animation, and a background pattern. Both are
				possible with Alakline's built in page header component.
			</p>
			<PageHeader
				heading="Page Header"
				description="The page header is a component that is used to display the page header."
			/>
			<p>Page header with image, background pattern, and pattern highlight.</p>
			<PageHeader
				heading="Page Header"
				description="The page header is a component that is used to display the page header."
				image="/alk-4.png"
				imageAlt="ALK Logo"
				backgroundPattern="M10 10L20 10M10 18L20 18M4 4L28 28M28 4L4 28"
				patternOpacity={0.1}
				patternHighlightClass="bg-theme-accent"
				class="relative"

			/>
		</article>

		<article>
			<h2>Cards</h2>
			<div class="flex flex-row flex-wrap justify-center items-center gap-6 w-full">
				<Card
					title="Card"
					description="Alt Card with no shadow."
					shadowSize="none"
					alt
				/>
				<Card
					title="Card"
					description="Alt card with medium shadow."
					shadowSize="md"
					alt
				/>
				<Card
					title="Card"
					description="Alt card with large shadow."
					shadowSize="lg"
					alt
				/>
				<Card
					title="Card"
					description="Card with no shadow."
					shadowSize="none"
				/>
				<Card
					title="Card"
					description="Card with medium shadow."
					shadowSize="md"
				/>
				<Card
					title="Card"
					description="Card with large shadow."
					shadowSize="lg"
				/>
			</div>
		</article>

		<article class="mt-12">
			<h2>Author with socials</h2>
			<Author authorId={1} pubDateTime={null} />
		</article>

		<article class="mt-12">
			<h2>Tooltip</h2>
			<!-- Basic usage -->
			<div>
				<Tooltip triggerText="Hover me" tooltipText="I'm a tooltip!" />
			</div>

			<!-- With slots -->
			<div>
				<Tooltip neonify>
					<span slot="trigger">Hover me</span>
					<div slot="content">So am I.</div>
				</Tooltip>
			</div>
		</article>
	</section>

	<!-- Typography -->

	<PageHeading text="Typography" />
	<section>
		<article>
			<p class="px-10">
			  Alakline comes with built-in typography, layouts, and essential styling powered by Tailwind CSS. You can easily customize or remove any styling to match your needs.
			</p>
		</article>
	</section>

	<section>
		<article>
			<h2 class="mb-4">Paragraphs</h2>
			<h3 class="mb-2">Sample Paragraph</h3>
			<p class="mb-4">
				Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ut urna nec
				purus lacinia tincidunt nec lorem ipsum dolor sit amet.
			</p>
			<p>
				Ut urna nec purus lacinia tincidunt nec lorem ipsum dolor sit amet,
				consectetur adipiscing elit. Sed ut urna nec purus lacinia tincidunt
				nec.
			</p>
		</article>
	</section>

	<section>
		<article class="">
			<h2 class="mb-4">Lists</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<span>
					<h3 class="mb-2">Unordered List</h3>
					<ul class="list-disc pl-5">
						<li>Item 1</li>
						<li>Item 2</li>
						<li>Item 3</li>
					</ul>
				</span>
				<div>
					<h3 class="mb-2">Ordered List</h3>
					<ol class="list-decimal pl-5">
						<li>Item 1</li>
						<li>Item 2</li>
						<li>Item 3</li>
					</ol>
				</div>
			</div>
		</article>
	</section>

	<section>
		<article>
			<h2 class="mb-4">Blockquotes</h2>
			<blockquote class="border-l-4 border-gray-300 pl-4 italic">
				<p>
					Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ut urna
					nec purus lacinia tincidunt nec.
				</p>
			</blockquote>
		</article>
	</section>

	<section>
		<article>
			<h2 class="mb-4">Code</h2>
			<p class="mb-4">
				Here's an example of inline code: <code>const x = 42;</code>
			</p>
			<p>Here's an example of a code block:</p>
			<CodeCopy lang="astro" code={code} />
		</article>
	</section>

	<section>
		<article>
			<h2 class="mb-4">Links</h2>
			<div class="mb-2">
				<Link
					href="/elements"
					class="pr-1 "
					text="Internal Link"
				/>
				<div class="h-2"></div>
				<Link
					href="https://google.com"
					external
					class="pr-1 "
					text="External Link"
				/>
			</div>
		</article>
	</section>
</Layout>
