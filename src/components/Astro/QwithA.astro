---
export interface Props {
	question: string;
	answer: string;
}

const { question, answer } = Astro.props;
---

<li class="group p-6 mb-6 rounded-lg relative overflow-hidden border border-theme-accent bg-theme-primary">
	<div class="absolute inset-0 bg-theme-accent opacity-10 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
	<div class="relative z-1">
		<h3 class="text-xl font-mono font-semibold mb-3 text-theme-accent">
			{question}
		</h3>
		<p class="ml-4 italic text-theme-text/80 leading-loose group-hover:text-theme-text transition-colors">
			 {answer}
		</p>
	</div>
</li>
