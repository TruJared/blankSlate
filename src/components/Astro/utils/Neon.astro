---
import type { AstroBuiltinAttributes } from "astro";

export interface Props {
	titleText?: string;
	class?: string | AstroBuiltinAttributes["class:list"];
}

const { titleText = null, class: className } = Astro.props;
---

<span class:list={["neon", className]} data-text={titleText} title={titleText}
	><slot name="neon">
		{titleText}
	</slot></span
>
